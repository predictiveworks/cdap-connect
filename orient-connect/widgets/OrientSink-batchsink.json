{
  "metadata": {"spec-version": "1.5"},

  "display-name": "OrientDB Sink",

  "icon": {
    "arguments": {
      "data": "data:image/png;base64,..."
    },
    "type": "inline"
  },

  "configuration-groups": [
    {
      "label": "Plugin Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName"
        }
 	    ]
    },
    {
      "label": "Endpoint Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Host",
          "name": "host"
        },
        {
          "widget-type": "textbox",
          "label": "Port",
          "name": "port"
        }
      ]
    },
    {
      "label": "Data Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Database",
          "name": "database"
        },
        {
          "widget-type": "textbox",
          "label": "Vertex Type",
          "name": "vertexType"
        },
        {
          "widget-type": "textbox",
          "label": "Edge Type",
          "name": "edgeType"
        },
        {
          "widget-type": "select",
          "label": "Write Option",
          "name": "writeOption",
          "widget-attributes": {
            "values": [
              "Append",
              "ErrorIfExists",
              "Ignore",
              "Overwrite"
            ],
            "default": "Append"
          }
        }
      ]
    },
    {
      "label": "Authentication",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "User Name",
          "name": "user"
        },
        {
          "widget-type": "textbox",
          "label": "Password",
          "name": "password"
        }
      ]
    }
  ]
}
